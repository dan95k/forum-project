<% include ../partials/header %>

<div class="ui raised very padded text container segment">
	<div class="ui sizer vertical segment">
  <h2 class="sub header">Choose categories to delete</h2>
  <div class="ui divider"></div>
  <form class="ui form" action='/catdelete' method='post'>
  	  <% categories.forEach(function(categorie){%>
		<div class="field">
			<div class="ui toggle checkbox">
  				<input type="checkbox" value='<%=categorie._id%>' name="categories">
  				<label>
  					Delete <%=categorie.title%>
  				</label>
			</div>
		</div>
  <% }); %>
  <button class="negative ui button tiny ui button">Delete Selected</button>
</form>
</div>
</div>




<% include ../partials/footer %>