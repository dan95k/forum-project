<% include ../partials/header %>
<div class="ui raised very padded text container segment">
<div class="ui sizer vertical segment">
  <h2 class="sub header">Choose forums to delete</h2>
  <div class="ui divider"></div>
  <div class="ui segment">

  <form class="ui form" action='/forumdelete' method='post'>
  	  <% forums.forEach(function(forum){%>
		<div class="field">
			<div class="ui radio checkbox">
  				<input type="radio" value='<%=forum._id%>' name="forums">
  				<label>
  					Delete <%=forum.name%> <span style='color: #C0C0C0'>- under <%=forum.parent%></span>
  				</label>
			</div>
		</div>
  <% }); %>
  </div>
  <button class="negative ui button tiny ui button">Delete Selected</button>
</form>
</div>
</div>

<% include ../partials/footer %>